#!/bin/bash

green="\[$(tput setaf 2)\]"
orange="\[$(tput setaf 166)\]"
yellow="\[$(tput setaf 11)\]"
purple="\[$(tput setaf 93)\]"
light_green="\[$(tput setaf 77)\]"
reset="\[$(tput sgr0)\]"

function b {
  git symbolic-ref HEAD 2>/dev/null | awk -F/ {'print $NF'}
}

function git_check_pull {
  LOCAL=$(git rev-parse @)
  REMOTE=$(git rev-parse @{u})
  BASE=$(git merge-base @ @{u})

  local reset=$(tput sgr0)
  local blue=$(tput setaf 27)

  if [ $LOCAL = $REMOTE ]; then
    echo ""
  elif [ $LOCAL = $BASE ]; then
    echo "${blue}<pull required>${reset}"
  fi
}

function git_check_branch {
  local reset=$(tput sgr0)
  local light_green=$(tput setaf 77)
  local red=$(tput setaf 196)

  if $(! git status -s &> /dev/null); then
    return
  else
    if [ "$(git status --porcelain)" == "" ]; then
      echo "${light_green}on $(b)${reset} $(git_check_pull 2> /dev/null)"
    else
      echo "${red}on $(b)*${reset} $(git_check_pull 2> /dev/null)"
    fi
  fi
}

export PS1="${yellow}[\u]${reset}@${orange}\H${reset}: \w \$(git_check_branch)\n$ "
