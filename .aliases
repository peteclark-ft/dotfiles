function pid {
  directory=$(basename $(pwd))
  ps -ef | grep Java | grep ${directory} | awk '{print $2}'
}

function kpid {
  kill $(pid)
}

function lower {
  cat - | tr 'A-Z' 'a-z'
}

function upper {
  cat - | tr 'a-z' 'A-Z'
}

# Prevent `vault write` commands from being stored in history.
function vault () {
  command vault "$@"
  if [[ $1 == write ]]; then history -d $((HISTCMD-1)) &> /dev/null; fi
}

