eval $(thefuck --alias)

function pid {
  directory=$(basename $(pwd))
  ps -ef | grep Java | grep ${directory} | awk '{print $2}'
}

function kpid {
  kill $(pid)
}

function lower {
  cat - | tr 'A-Z' 'a-z'
}

function upper {
  cat - | tr 'A-Z' 'a-z'
}

function vscode {
  VSCODE_CWD="$PWD" open -n -b "com.microsoft.VSCode" --args $*;
}

