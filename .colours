#!/bin/bash

function colours {
  orb=$'\342\227\217'
  reset=$(tput sgr0)
  red=$(tput setaf 196)
  blue=$(tput setaf 39)
  light_green=$(tput setaf 77)
  orange="$(tput setaf 166)"
  yellow="$(tput setaf 11)"

  red_status=${red}${orb}${reset}
  amber_status=${orange}${orb}${reset}
  green_status=${light_green}${orb}${reset}
}

function cleanup_colours {
  unset orb
  unset reset
  unset red
  unset blue
  unset light_green
  unset orange
  unset yellow

  unset red_status
  unset amber_status
  unset green_status
}
